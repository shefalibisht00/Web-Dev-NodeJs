<!DOCTYPE html>

<% include ./layout %>

<body>
    <div style="margin-left: 40px">
        <h1 class="text-capitalize"> Welcome, <%= user.name%> </h1>
        <p class="lead"> Add new music bands
            <a type="text" class="btn btn-primary btn-sm" href="/createBands"> Add
            </a> </p>
    </div>
    <br /><br />

    <div class="card text-center col-lg-10 mx-auto">
        <h4 class="card-header bg-danger text-white">
            Favourite Music Bands
        </h4>
        <div class="card-body">
            <% if (MusicBands.length>0) { var i=1%>
            <table class="table table-hover table-sm">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">Sno</th>
                        <th scope="col">Band Name</th>
                        <th scope="col">Genre</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% MusicBands.forEach(function(band) { %>
                    <tr>
                        <th scope="row"><%= i++ %></th>
                        <td class="text-capitalize"><%= band.name %></td>
                        <td class="text-capitalize"><%= band.genre %></td>
                        <td>
                            <a href="/editBands/<%= band.id%>"><i class="fa fa-pencil"></i></a> &nbsp;
                            <a onclick="return confirm('Are you sure you want to delete this item')"
                                href="/deleteBands/<%= band.id%>"><i class="fa fa-close"></i></a>

                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
            <% }else { %>
            <p class="lead font-weight-normal"> No bands listed!</p>
            <% }%>
        </div>
    </div>


</body>

</html>