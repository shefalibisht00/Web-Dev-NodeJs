<!DOCTYPE html>
<header>
  <% include ./layout %>
</header>

<body>
  <div class="row mt-5"></div>
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Create Band</h1>
      <% if (error) { %>
      <div class="alert alert-danger" role="alert">
        <%= error %>
      </div>
      <% } %>
      <form action="/createBands" method="POST">
        <div class="form-group"><label for="name">Name</label><input class="form-control" id="name" type="text"
            name="name" placeholder="Enter Music band" /></div>
        <div class="form-group"><label for="username">Genre</label><input class="form-control" id="genre" type="text"
            name="genre" placeholder="Enter Genre" /></div>
        <button class="btn btn-info btn-block" type="submit">Create</button>
      </form>
      <br />
      <a type="text" class="alert-link" href="/dashboard">Back to List</a>
    </div>
  </div>

</body>

</html>