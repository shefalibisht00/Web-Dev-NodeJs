<!DOCTYPE html>
<header>
  <% include ./layout %>
</header>

<body>

  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Login</h1>
        <% if (error) { %>
        <div class="alert alert-danger" role="alert">
          <%= error %>
        </div>
        <% } %>
        <form action="/login" method="POST">
          <div class="form-group"><label for="email">Email</label><input class="form-control" id="email"
              type="text" name="email" placeholder="Enter Email" /></div>
          <div class="form-group"><label for="password">Password</label><input class="form-control" id="password"
              type="password" name="password" placeholder="Enter Password" /></div><button
            class="btn btn-primary btn-block" type="submit">Login</button>
        </form>
        <p class="lead mt-4">No Account? <a href="/register">Register</a></p>
      </div>
    </div>
  </div>
</body>

</html>